.all{
    margin-top: 20rpx;
    padding: 20rpx;
}
.user_header{
    height: 48rpx;
}
.user_pic{
    float: left;
}
.user_pic image{
    width: 56rpx;
    height: 56rpx;
    border-radius: 28rpx;
}
.user_all{
    margin-left: 20rpx;
    float: left;
}
.user_name{
    font-size: 28rpx;
    color: #4473A9;
}
.user_time{
    color: #a9a9a9;
    font-size: 25rpx;
    margin-top:5rpx;
}
.content_pic{
    text-align: center;
}
.content_title{
    font-size: 30rpx;
    margin-top: 30rpx;
    margin-bottom: 20rpx;
    font-family: "Microsoft Yahei";
    line-height:40rpx;
}
.user_footer{
    border-bottom: 2rpx solid #ccc;
    height: 100rpx;
}
.user_footer_view{
    float: left;
    width: 25%;
    height: 35rpx;
    margin-top: 30rpx;
    margin-bottom: 50rpx;
}
.user_icon{
    width: 45rpx;
    height: 45rpx;
    float: left;
}
.user_fav_icon{
    background: url("../../images/index/mainCellDing.png") no-repeat;
}
.user_no_icon{
    background: url("../../images/index/mainCellCai.png") no-repeat;
}
.user_share_icon{
    background: url("../../images/index/mainCellShare.png") no-repeat;
}
.user_say_icon{
    background: url("../../images/index/mainCellComment.png") no-repeat;
}
.user_footer_text{
    float: left;
    color: #333;
    font-size: 30rpx;
    padding-left:20rpx;
    margin-top:8rpx;
    font-family: "Microsoft Yahei";
}